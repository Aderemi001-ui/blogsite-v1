    <body  class="d-flex align-items-center py-4 bg-body-tertiary" style="overflow-y: hidden;" > 
      <main class="form-signin w-100 m-auto justify-content-center mx-5"> 
        <form id="signin" method="POST"> 
            <h1 class="h3 mb-3 fw-normal" >Please sign Up</h1>
            <div class="form-floating mx-5" >
                 <input type="text" class="form-control " required name="name"  id="floatingInput" placeholder="John Doe Bartholomew">
                 <label for="floatingInput" class="floatingInput" >Full Name</label> 
                </div>
             <div class="form-floating mx-5" >
                 <input type="email" class="form-control "  required name="email" id="floatingInput" placeholder="name@example.com">
                 <label for="floatingInput" class="floatingInput">Email address</label> 
                </div>
                  <div class="form-floating mx-5"> 
                    <input type="password" class="form-control " required name="password" id="floatingPassword" placeholder="Password"> 
                    <label for="floatingPassword" class="floatingInput">Password</label>
                 </div>
                  <div class="form-floating mx-5" >
                 <input type="text" class="form-control "  required  id="floatingInput" placeholder="johndoe001">
                 <label for="floatingInput" class="floatingInput">Username</label> 
                </div>
                  <div class="form-check text-start my-3"> 
                    <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault" style="margin-left: 480px !important;"> 
                    <label class="form-check-label" for="checkDefault" id="checkDefault" style="width:400px !important;margin-left: 480px !important;">Remember me</label>
  <a style="margin-left: 480px !important; width: fit-content;" href="/">Already have an account?Sign in</a>
                </div> 
                       
 <button class="btn btn-primary w-100 py-2" id="login" type="submit">Register</button> <p class="mt-5 mb-3 text-body-secondary">© 2017–2025</p>
 </form> 
