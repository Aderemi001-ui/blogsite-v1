<script>
function edit(id){
  const title=document.getElementById('title').value
const content=document.getElementById('message').value
const data={
  title:title,
  content:content

}
axios.put(`/posts/${id}` , data )
 
.then(()=>{
  console.log('Post updated successfully')
  
})
.catch(error=>{
  console.error('Error updating posts',error)
})
}

</script>

